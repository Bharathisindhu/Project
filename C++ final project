#include <iostream>
using namespace std;

int main() {
    int temperature;
    cout << "Enter the temperature in Celsius: ";
    cin >> temperature;
/* in this program I have used 
if sta*tement*/
    if(temperature <= 0) {
        cout << "Freezing cold!\n";
    } else if(temperature <= 14) {
        cout << "It's a bit chilly outside\n";
    } else if(temperature <= 24) {
        cout << "It's a comfortable temperature outside.\n";
    } else if(temperature <= 40) {
        cout << "It's quite warm outside\n";
    } else {
        cout << "Invalid temperature input.\n";
    }

    return 0;
}
